@{
    ViewBag.Title = "PMA+";
    Layout = "~/Areas/HeadOfAcademy/Views/Shared/_AdminLayout.cshtml";
}


<div ng-controller="TalentIdentificationController" ng-cloak>
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2>Talent Identification</h2>
            <ol class="breadcrumb">
                <li>
                    <a>Home</a>
                </li>
                <li class="active">
                    <strong>Talent Identification</strong>
                </li>
            </ol>
        </div>
        <div class="col-sm-8">
            <div class="title-action">
                <a class="btn btn-primary" ng-click="open()">Add Scouted Player</a>
            </div>
        </div>
    </div>
    <div class="wrapper wrapper-content  animated fadeInRight" ng-cloak>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Talent Identification</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user"></ul>
                            <a>
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="modal inmodal" id="addTalent" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content animated bounceInRight">
                                    <div class="modal-header">
                                        <button type="button" class="close" ng-click="cancel()"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h3 class="modal-title text-left">Add</h3>
                                    </div>
                                    <div class="modal-body">
                                        <form name="myform" class="form-horizontal" novalidate>
                                            <div class="form-group" ng-class="{'has-error':myform.eventTitle.$invalid && (myform.eventTitle.$dirty||myform.form_Submitted)}">
                                                <label class="col-lg-4 title-modal">Player First Name:</label>
                                                <div class="col-lg-7 pull-right">
                                                    <input name="eventTitle" ng-model="newEvent.title" required class="form-control" maxlength="50">
                                                </div>
                                            </div>
                                            <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                                <label class="col-lg-4 title-modal">Player Last Name:</label>
                                                <div class="col-lg-7 pull-right">
                                                    <textarea name="eventNote" ng-model="newEvent.note" required class="form-control"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group" ng-class="{'has-error':myform.eventStart.$invalid && (myform.eventStart.$dirty||myform.form_Submitted)}">
                                                <label class="col-lg-4 title-modal">Date Identified:</label>
                                                <div class="col-lg-7 pull-right">
                                                    <div class="dropdown">
                                                        <a class="dropdown-toggle" id="dropdown1" role="button" data-toggle="dropdown" data-target="#" href="#">
                                                            <div class="input-group">
                                                                <input type="text" class="form-control" value="{{newEvent.start | date:'dd-MM-yyyy HH:mm' }}"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                                            </div>
                                                        </a>
                                                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                                            <datetimepicker required name="eventStart" data-ng-model="newEvent.start" data-datetimepicker-config="{ dropdownSelector: '#dropdown1', startView:'day' }"/>
                                                        </ul>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                                <label class="col-lg-4 title-modal">Preset Club:</label>
                                                <div class="col-lg-7 pull-right">
                                                    <textarea name="eventNote" ng-model="newEvent.note" required class="form-control"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group" ng-class="{'has-error':myform.eventEnd.$invalid && (myform.eventEnd.$dirty||myform.form_Submitted)}">
                                                <label class="col-lg-4 title-modal">Date of Birth:</label>
                                                <div class="col-lg-7 pull-right">
                                                    <div class="dropdown">
                                                        <a class="dropdown-toggle" id="dropdown2" role="button" data-toggle="dropdown" data-target="#" href="#">
                                                            <div class="input-group">
                                                                <input type="text" class="form-control" value="{{newEvent.end | date:'dd-MM-yyyy HH:mm' }}"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                                            </div>
                                                        </a>
                                                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                                            <datetimepicker required name="eventEnd" data-ng-model="newEvent.end" data-datetimepicker-config="{ dropdownSelector: '#dropdown2', startView:'day' }"/>
                                                        </ul>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                                <label class="col-lg-4 title-modal">Parents First Name:</label>
                                                <div class="col-lg-7 pull-right">
                                                    <textarea name="eventNote" ng-model="newEvent.note" required class="form-control"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                                <label class="col-lg-4 title-modal">Parents Last Name:</label>
                                                <div class="col-lg-7 pull-right">
                                                    <textarea name="eventNote" ng-model="newEvent.note" required class="form-control"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                                <label class="col-lg-4 title-modal">Parents Last Name:</label>
                                                <div class="col-lg-7 pull-right">
                                                    <textarea name="eventNote" ng-model="newEvent.note" required class="form-control"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                                <label class="col-lg-4 title-modal">Parents Mobile:</label>
                                                <div class="col-lg-7 pull-right">
                                                    <textarea name="eventNote" ng-model="newEvent.note" required class="form-control"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                                <label class="col-lg-4 title-modal">Parents Notes:</label>
                                                <div class="col-lg-7 pull-right">
                                                    <textarea name="eventNote" ng-model="newEvent.note" required class="form-control"></textarea>
                                                </div>
                                            </div>
                                           
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button ng-click="delete()" id="deleteConf" type="button" class="btn btn-white pull-left">Delete</button>
                                        <button ng-click="cancel()" id="closeModal" type="button" class="btn btn-white">Close</button>
                                        <button ng-click="ok()" id="saveModal" type="button" ng-disabled="laddaLoading" class="ladda-button btn btn-primary" ladda-button="loginLoading" data-style="expand-right" data-size="s" style="background-color: @ViewBag.them;">
                                            <span class="ladda-label" style="font-size: 14px;">Save changes</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-9 m-b-xs">
                                <form class="form-horizontal">
                                    <div class=" form-group" style="margin-left: 0px;">
                                        <div data-toggle="buttons" class="btn-group">
                                            <label ng-click="itemsPerPage = 10" class="btn btn-sm btn-white"> <input type="radio" id="option1" name="options"> 10 </label>
                                            <label ng-click="itemsPerPage = 20" class="btn btn-sm btn-white active"> <input type="radio" id="option2" name="options"> 20 </label>
                                            <label ng-click="itemsPerPage = 30" class="btn btn-sm btn-white"> <input type="radio" id="option3" name="options"> 30 </label>
                                        </div>
                                        <div class="btn-group">
                                            <label onclick=" $('.table').tableExport({ type: 'csv', escape: 'false' }); " class="btn btn-sm btn-white">
                                                CSV
                                            </label>
                                            <label onclick=" $('.table').tableExport({ type: 'excel', escape: 'false' }); " class="btn btn-sm btn-white">
                                                Excel
                                            </label>
                                            <label onclick=" $('.table').tableExport({ type: 'pdf', escape: 'false' }); " class="btn btn-sm btn-white">
                                                PDF
                                            </label>
                                            <label onclick=" print($('.table')) " class="btn btn-sm btn-white">
                                                Print
                                            </label>
                                        </div>
                                    </div>
                                </form>

                            </div>

                            <div class="col-sm-3">
                                <div class="input-group">
                                    <input ng-model="q" type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                    </span>
                                </div>
                            </div>

                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Scout Name</th>
                                    <th>Date Found</th>
                                    <th>Player Name</th>
                                    <th>Present Club</th>
                                    <th>Age</th>
                                    <th>Contact Telephone</th>
                                    <th>Rating</th>
                                    <th>Invite</th>
                                    <th>Attended</th>
                                    <th>Joined</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
<script src="~/Scripts/controllers/TalentIdentificationController.js"></script>
}