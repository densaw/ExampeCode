@{
    ViewBag.Title = "PMA+";
    Layout = "~/Areas/HeadOfAcademy/Views/Shared/_AdminLayout.cshtml";
}

<div ng-controller="TalentIdController" ng-cloak>
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2>Talent ID Profile</h2>
            <ol class="breadcrumb">

                <li>
                    <a>Talent Identification</a>
                </li>
                <li class="active">
                    <strong>Profile</strong>
                </li>
            </ol>
        </div>
        <div class="col-sm-8">
            <div class="title-action">
                <a class="btn btn-primary" ng-href="@Url.Action("TalentIndefication", "Home", new {area = "HeadOfAcademy"})">Back</a>
                <a class="btn btn-primary" ng-click="confInvite()">Invite to Club</a>
                <a class="btn btn-primary" ng-click="addNotes()">Add Notes</a>
            </div>

        </div>

    </div>

    <div class="wrapper wrapper-content animated fadeIn">
        <div class="row">

            <div class="col-lg-4">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Player Details</h5>
                        <div class="ibox-tools">
                            <a @*class="collapse-link"*@>
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a @*class="dropdown-toggle" data-toggle="dropdown" href="#"*@>
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                @*<li>
                                        <a href="#">Config option 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Config option 2</a>
                                    </li>*@
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form class="form-horizontal" >

                            <div class=" form-group " style="margin-bottom: 0px;">
                                <label class="col-lg-4 control-label " style="text-align: left; padding-left: 20px;">Player Name:</label>

                                <div class="col-lg-8">
                                    <p class="form-control" style="border: none">{{profileTalents.firstName}} {{profileTalents.lastName}}</p>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0px;">
                                <label class="col-lg-4 control-label" style="text-align: left; padding-left: 20px;">Date Found:</label>

                                <div class="col-lg-8">
                                    <p class="form-control" style="border: none">{{profileTalents.dateIdentificated | date:'dd-MM-yyyy'}}</p>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0px;">
                                <label class="col-lg-4 control-label" style="text-align: left; padding-left: 20px;">Present Club:</label>

                                <div class="col-lg-8">
                                    <p class="form-control" style="border: none">{{profileTalents.presentClub}}</p>
                                </div>
                            </div>

                            <div class="form-group" style="margin-bottom: 0px;">
                                <label class="col-lg-4 control-label" style="text-align: left; padding-left: 20px;">Birth Date:</label>

                                <div class="col-lg-8">
                                    <p class="form-control" style="border: none">{{profileTalents.birthDate | date:'dd-MM-yyyy' }}</p>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0px;">
                                <label class="col-lg-4 control-label" style="text-align: left; padding-left: 20px;">Parents Name</label>

                                <div class="col-lg-8">
                                    <p class="form-control" style="border: none">{{profileTalents.parentsFirstName}} {{profileTalents.parentsLastName}}</p>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0px;">
                                <label class="col-lg-4 control-label" style="text-align: left; padding-left: 20px;">Email:</label>

                                <div class="col-lg-8">
                                    <p class="form-control" style="border: none">{{profileTalents.parentsEmail}}</p>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0px;">
                                <label class="col-lg-4 control-label" style="text-align: left; padding-left: 20px;">Mobile:</label>

                                <div class="col-lg-8">
                                    <p class="form-control" style="border: none">{{profileTalents.parentsMobile}}</p>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0px;">
                                <label class="col-lg-4 control-label" style="text-align: left; padding-left: 20px;">Invited:</label>

                                <div class="col-lg-8">

                                    <p class="form-control" style="border: none">{{profileTalents.invitedToTrial?'Yes':'No'}}</p>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0px;">
                                <label class="col-lg-4 control-label" style="text-align: left; padding-left: 20px;">Attended:</label>

                                <div class="col-lg-8">

                                    <p class="form-control" style="border: none">{{profileTalents.attendedTrail?'Yes':'No'}}</p>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0px;">
                                <label class="col-lg-4 control-label" style="text-align: left; padding-left: 20px;">Joined:</label>

                                <div class="col-lg-8">
                                    <p class="form-control" style="border: none">{{profileTalents.joinedClub?'Yes':'No'}}</p>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
            <div class="col-lg-8">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Assessments</h5>
                        <div class="ibox-tools">
                            <a @*class="collapse-link"*@>
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a @*class="dropdown-toggle" data-toggle="dropdown" href="#"*@>
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                @*<li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>*@
                            </ul>
                            <a @*class="close-link"*@>
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                                
                    <div class="table-responsive">
                        <div class="ibox-content">
                            <form class="form-horizontal ">

                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th style="width: 20% !important;">Date</th>
                                        <th style="width: 20% !important;">Scout</th>
                                        <th style="width: 20% !important;">Location</th>
                                        <th style="width: 40% !important;">Notes</th>
                                    </tr>
                                    </thead>
                                </table>
                                <div class="bodycontainer scrollable">
                                    <table class="table table-striped">
                                        <tbody id="user-rows">
                                            <tr dir-paginate="item in items1 | filter:q | itemsPerPage: coursePerPage" total-items="totalCourses">
                                                <td class="user-row" style="opacity: 1;width: 20% !important;">{{item.addDate | date:'dd-MM-yyyy' }}</td>
                                                <td class="user-row" style="opacity: 1;width: 20% !important;">{{item.scout}}</td>
                                                <td class="user-row" style="opacity: 1;width: 20% !important;">
                                                    {{item.location}}
                                                </td>
                                                <td class="user-row" style="opacity: 1; width: 40% !important;" >{{item.note}}</td>

                                            </tr>
                                        </tbody>

                                    </table>
                                    </div>
                                
                            </form>                       
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Player Attributes</h5>
                        <div class="ibox-tools">
                            <a @*class="collapse-link"*@>
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a @*class="dropdown-toggle" data-toggle="dropdown" href="#"*@>
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                @*<li>
                                        <a href="#">Config option 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Config option 2</a>
                                    </li>*@
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>

                    </div>

                    <div class="table-responsive">
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-sm-9 m-b-xs">
                                    <form class="form-horizontal">
                                        <div class=" form-group" style="margin-left: 0px;">
                                            <div data-toggle="buttons" class="btn-group">
                                                <label ng-click="itemsPerPage = 10" class="btn btn-sm btn-white"> <input type="radio" id="option1" name="options"> 10 </label>
                                                <label ng-click="itemsPerPage = 20" class="btn btn-sm btn-white active"> <input type="radio" id="option2" name="options"> 20 </label>
                                                <label ng-click="itemsPerPage = 30" class="btn btn-sm btn-white"> <input type="radio" id="option3" name="options"> 30 </label>
                                            </div>
                                            <div class="btn-group">
                                                <label onclick=" $('.tablea').tableExport({ type: 'csv', escape: 'false' }); " class="btn btn-sm btn-white">
                                                    CSV
                                                </label>
                                                <label onclick=" $('.tablea').tableExport({ type: 'excel', escape: 'false' }); " class="btn btn-sm btn-white">
                                                    Excel
                                                </label>
                                                <label onclick=" $('.tablea').tableExport({ type: 'pdf', escape: 'false' }); " class="btn btn-sm btn-white">
                                                    PDF
                                                </label>
                                                <label onclick=" print($('.tablea')) " class="btn btn-sm btn-white">
                                                    Print
                                                </label>
                                            </div>
                                        </div>
                                    </form>

                                </div>

                                <div class="col-sm-3">
                                    <div class="input-group">
                                        <input ng-model="q" type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                            <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                        </span>
                                    </div>
                                </div>

                            </div>
                            <table class="table tablea table-striped">
                                <thead>
                                    <tr>
                                        <th>Attribute Name</th>
                                        <th>Player</th>
                                        <th>Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr dir-paginate="item in items | filter:q | itemsPerPage: itemsPerPage" total-items="totalItems">
                                        <td>{{item.attributeName}}</td>
                                        <td>
                                            <div class="check-link">
                                                <input ng-change="checkAtt(item)" type="checkbox" ng-model="item.haveAttribute">
                                            </div>
                                            </td>
                                        <td>
                                            <input ng-click="checkScore(item)" type="number" ng-model="item.score" max="10" min="0" size="5px">
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                                <dir-pagination-controls on-page-change="pageChanged(newPageNumber)"></dir-pagination-controls>
                                </div>
                            </div>
                        </div>
                    @*Modal*@
                    <div class="modal inmodal" id="confInvite" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content animated bounceInRight">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                    <h3 class="modal-title text-left">Invite</h3>
                                </div>
                                <div class="modal-body">
                                    <form name="myform" class="form-horizontal" novalidate>

                                        <div class="form-group">
                                            <label class="col-lg-4 title-modal">Invited to Trial:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input  id="toggleInvite" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4 title-modal">Attended Trail:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input id="toggleAttendance" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4 title-modal">Joined Club:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input id="toggleJoined" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default">
                                            </div>
                                        </div>

                                    </form>

                                </div>
                                <div class="modal-footer">
                                    <button ng-click="cancelInvite()" id="closeInvite" type="button" class="btn btn-white">Close</button>
                                    <button ng-click="okInvite()" id="saveInvite" type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                @*Modal End*@
                @*Modal*@
                <div class="modal inmodal" id="confaddNotes" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content animated bounceInRight">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                <h3 class="modal-title text-left">Add Notes</h3>
                            </div>
                            <div class="modal-body">
                                <form name="myform" class="form-horizontal" novalidate>

                                    <div class="form-group" ng-class="{'has-error':myform.eventTitle.$invalid && (myform.eventTitle.$dirty||myform.form_Submitted)}">
                                        <label class="col-lg-4 title-modal">Scout:</label>
                                        <div class="col-lg-7 pull-right">
                                            <select name="scoutName" ng-model="newNote.scout" ng-options="scout.name as scout.name for scout in scouts" class=" form-control"></select>
                                        </div>
                                    </div>

                                    <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                        <label class="col-lg-4 title-modal">Location:</label>
                                        <div class="col-lg-7 pull-right">
                                            <input name="eventNote" ng-model="newNote.location" required class="form-control" maxlength="50">
                                        </div>
                                    </div>
                                    <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                        <label class="col-lg-4 title-modal">Note:</label>
                                        <div class="col-lg-7 pull-right">
                                            <textarea name="eventNote" ng-model="newNote.note" required class="form-control"></textarea>
                                        </div>
                                    </div>
                                   
                                </form>

                            </div>
                            <div class="modal-footer">
                                <button ng-click="cancelNotes()" id="closeNote" type="button" class="btn btn-white">Close</button>
                                <button ng-click="okNotes(newNote.id)" id="saveNotes" type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
                @*Modal End*@
                
                </div>
            </div>
     
        </div>
    </div>

@section scripts{
    <script src="~/Scripts/controllers/TalentIdentificationController.js"></script>
}
