
@{
    ViewBag.Title = "CurriculumTypes";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Club Clients</h2>
        <ol class="breadcrumb">
            <li>
                <a>Home</a>
            </li>
            <li class="active">
                <strong>Curriculum Types</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a class="btn btn-primary" data-toggle="modal" data-target="#addTypeModal">Add a Type</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12" style="margin-top: 10px;">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>FaCourses</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user"></ul>
                        <a>
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @*Modal*@
                    <div class="modal inmodal" id="addTypeModal" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content animated bounceInRight">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                    <h3 class="modal-title">Add a Type</h3>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label>Type Name:</label> <input ng-model="newClub.name" placeholder="Enter name" class="form-control">
                                    </div>

                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input id="userblocktoggle" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Blocks
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input id="userAttendance" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Blocks for Attendance
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input id="userObjectives" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Blocks for Objectives
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input id="userRatings" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Blocks for Ratings
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input id="userReports" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Blocks for Reports
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Weeks
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Weeks for Attendance
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Week for Objectives
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Weeks for Ratings
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Weeks for Reports
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Sessions
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Sessions for Attendance
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Sessions for Objectives
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Sessions for Ratings
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Sessions for Reports
                                        </label>
                                    </div>
                                    
                                    

                                </div>
                                <div class="modal-footer">
                                    <button ng-click="cancel()" id="closeModal" type="button" class="btn btn-white">Close</button>
                                    <button ng-click="ok()" id="saveModal" type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*Modal End*@
                    <div class="row">
                        <div class="col-sm-9 m-b-xs">
                            <div data-toggle="buttons" class="btn-group">
                                <label ng-click="coursePerPage = 10" class="btn btn-sm btn-white active"> <input type="radio" id="option1" name="options"> 10 </label>
                                <label ng-click="coursePerPage = 20" class="btn btn-sm btn-white"> <input type="radio" id="option2" name="options"> 20 </label>
                                <label ng-click="coursePerPage = 30" class="btn btn-sm btn-white"> <input type="radio" id="option3" name="options"> 30 </label>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <input ng-model="q" type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name </th>
                                <th>TownCity </th>
                                <th>Coaches </th>
                                <th>Players</th>
                                <th>PiPay </th>
                                <th>LastLogin </th>
                                <th>Status </th>
                            </tr>
                            </thead>
                            <tbody id="contentTable">
                            <tr dir-paginate="club in clubs | filter:q | itemsPerPage: clubsPerPage" total-items="totalClubs">
                                <td>{{course.id}}</td>
                                <td>{{course.name}}</td>
                                <td>{{course.townCity}}</td>
                                <td>{{course.coaches}}</td>
                                <td>{{course.players}}</td>
                                <td>{{course.piPay}}</td>
                                <td>{{course.lastLogin}}</td>
                                <td>{{course.status}}</td>
                            </tr>
                            </tbody>
                        </table>
                        <dir-pagination-controls on-page-change="pageChanged(newPageNumber)"></dir-pagination-controls>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-default {
        background-color: #FFFFFF;
        border-color: #c2c2c2;
        color: #FFFFFF;
    }
</style>
<script>
    $(function () {
        $('#userblocktoggle').change(function () {
            console.log($(this).prop('checked'));
            if ($(this).prop('checked')) {
                $('#userAttendance').bootstrapToggle('enable');
                $('#userObjectives').bootstrapToggle('enable');
                $('#userRatings').bootstrapToggle('enable');
                $('#userReports').bootstrapToggle('enable');
            } else {
                $('#userAttendance').bootstrapToggle('disable');
                $('#userObjectives').bootstrapToggle('disable');
                $('#userRatings').bootstrapToggle('disable');
                $('#userReports').bootstrapToggle('disable');
            }
            //$('#console-event').html('Toggle: ' + $(this).prop('checked'))
        });
    })
</script>

