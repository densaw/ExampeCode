@{
    ViewBag.Title = "PMA+";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}
<div ng-controller="CurriculumTypesController">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2>Curriculum Types</h2>
            <ol class="breadcrumb">
                <li>
                    <a>Home</a>
                </li>
                <li class="active">
                    <strong>Curriculum Types</strong>
                </li>
            </ol>
        </div>
        <div class="col-sm-8">
            <div class="title-action">
                <a class="btn btn-primary" ng-click="openAdd()">Add a Type</a>
            </div>
        </div>
    </div>

    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Curriculum Types</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user"></ul>
                            <a>
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        @*Modal*@
                        <div class="modal inmodal" id="addTypeModal" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content animated bounceInRight">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h3 class="modal-title text-left">{{modalTitle}}</h3>
                                    </div>
                                    <div class="modal-body">
                                        <form name="myform" class="form-horizontal" novalidate>
                                            <div class="form-group " ng-class="{'has-error':myform.name.$invalid && (myform.name.$dirty||myform.form_Submitted) }">
                                                <label class="title-modal">Type Name:</label>
                                                <input name="name" ng-model="currName" placeholder="Enter name" class="form-control" required>
                                            </div>
                                        </form>

                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="userblocktoggle" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Blocks
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="userAttendance" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Blocks for Attendance
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="userObjectives" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Blocks for Objectives
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="userRatings" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Blocks for Ratings
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="userReports" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Blocks for Reports
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="week" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Weeks
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="weekAttendance" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Weeks for Attendance
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="weekObjectives" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Week for Objectives
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="weekRetings" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Weeks for Ratings
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="weekReports" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Weeks for Reports
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="sessions" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Sessions
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="sessionsAttendance" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Sessions for Attendance
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="sessionsObjectives" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Sessions for Objectives
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="sessionsRetings" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Sessions for Ratings
                                            </label>
                                        </div>
                                        <div class="checkbox title-modal">
                                            <label class="checkbox-inline">
                                                <input id="sessionsReports" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default"> Uses Sessions for Reports
                                            </label>
                                        </div>


                                    </div>
                                    <div class="modal-footer">
                                        <button ng-click="cancel()" id="closeModal" type="button" class="btn btn-white">Close</button>
                                        <button ng-click="okCurr(currId)" id="saveModal" type="button" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*Modal End*@
                        @*Modal*@
                        <div class="modal inmodal" id="confDelete" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content animated bounceInRight">
                                    <div class="modal-header">

                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h3 class="modal-title">Delete Record?</h3>


                                    </div>
                                    <div class="modal-body">
                                        <h3 class="text-center">Are you sure you wish to delete this record?</h3>
                                    </div>
                                    <div class="modal-footer">
                                        <button ng-click="cancel()" type="button" class="btn btn-white">No</button>
                                        <button ng-click="delete()" type="button" class="btn btn-primary">Yes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*Modal End*@
                        <div class="row">
                            <div class="col-sm-9 m-b-xs">
                                <form class="form-horizontal">
                                    <div class="form-group" style="margin-left: 0px;">
                                        <div data-toggle="buttons" class="btn-group">
                                            <label ng-click="curriculumsPerPage = 10" class="btn btn-sm btn-white"> <input type="radio" id="option1" name="options"> 10 </label>
                                            <label ng-click="curriculumsPerPage = 20" class="btn btn-sm btn-white active"> <input type="radio" id="option2" name="options"> 20 </label>
                                            <label ng-click="curriculumsPerPage = 30" class="btn btn-sm btn-white"> <input type="radio" id="option3" name="options"> 30 </label>
                                        </div>
                                        <div class="btn-group">
                                            <label onclick=" $('.table').tableExport({ type: 'csv', escape: 'false' }); " class="btn btn-sm btn-white">
                                                CSV
                                            </label>
                                            <label onclick=" $('.table').tableExport({ type: 'excel', escape: 'false' }); " class="btn btn-sm btn-white">
                                                Excel
                                            </label>
                                            <label onclick=" $('.table').tableExport({ type: 'pdf', escape: 'true' }); " class="btn btn-sm btn-white" target="_blank">
                                                PDF
                                            </label>
                                            <label onclick="print($('.table'))"  class="btn btn-sm btn-white">
                                                Print
                                            </label>
                                        </div>
                                    </div>
                                </form>

                            </div>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <input ng-model="q" type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>BL</th>
                                        <th>BA</th>
                                        <th>BR</th>
                                        <th>BRe</th>
                                        <th>WE</th>
                                        <th>WA</th>
                                        <th>WR</th>
                                        <th>WRe</th>
                                        <th>SE</th>
                                        <th>SA</th>
                                        <th>SR</th>
                                        <th>SRe</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="contentTable">
                                    <tr dir-paginate="curriculum in curriculums | filter:q | itemsPerPage: curriculumsPerPage" total-items="totalCurriculums">
                                        <td>{{curriculum.name}}</td>
                                        <td><i class="fa {{curriculum.blocks | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.blockATT | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.blockRE | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.blockRTE | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.weeks | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.weekATT | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.weekRE | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.weekRTE | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.sessions | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.sessionsATT | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.sessionsRE | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td><i class="fa {{curriculum.sessionsRTE | curr: 'fa-check':'fa-times'}}"></i></td>
                                        <td>
                                            <i ng-click="openEdit(curriculum.id)" class="fa fa-cog" style="cursor: pointer;"></i>
                                            <i ng-click="openDelete(curriculum.id)" class="fa fa-trash" style="cursor: pointer;"></i>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <dir-pagination-controls on-page-change="pageChanged(newPageNumber)"></dir-pagination-controls>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .btn-default {
        background-color: #FFFFFF;
        border-color: #c2c2c2;
        color: #FFFFFF;
    }

    .form-group {
        margin-bottom: 5px;
    }

    .m-b {
        margin-bottom: 0px;
    }
</style>
<script>
    $(function () {
        $('#week').change(function () {
            if ($(this).prop('checked')) {
                $('#weekAttendance').bootstrapToggle('enable');
                $('#weekObjectives').bootstrapToggle('enable');
                $('#weekRetings').bootstrapToggle('enable');
                $('#weekReports').bootstrapToggle('enable');
            } else {
                $('#weekAttendance').bootstrapToggle('off');
                $('#weekObjectives').bootstrapToggle('off');
                $('#weekRetings').bootstrapToggle('off');
                $('#weekReports').bootstrapToggle('off');
                $('#weekAttendance').bootstrapToggle('disable');
                $('#weekObjectives').bootstrapToggle('disable');
                $('#weekRetings').bootstrapToggle('disable');
                $('#weekReports').bootstrapToggle('disable');
            }
        });

        $('#userblocktoggle').change(function () {
            if ($(this).prop('checked')) {
                $('#userAttendance').bootstrapToggle('enable');
                $('#userObjectives').bootstrapToggle('enable');
                $('#userRatings').bootstrapToggle('enable');
                $('#userReports').bootstrapToggle('enable');
            } else {
                $('#userAttendance').bootstrapToggle('off');
                $('#userObjectives').bootstrapToggle('off');
                $('#userRatings').bootstrapToggle('off');
                $('#userReports').bootstrapToggle('off');
                $('#userAttendance').bootstrapToggle('disable');
                $('#userObjectives').bootstrapToggle('disable');
                $('#userRatings').bootstrapToggle('disable');
                $('#userReports').bootstrapToggle('disable');
            }
        });

        $('#sessions').change(function () {
            if ($(this).prop('checked')) {
                $('#sessionsAttendance').bootstrapToggle('enable');
                $('#sessionsObjectives').bootstrapToggle('enable');
                $('#sessionsRetings').bootstrapToggle('enable');
                $('#sessionsReports').bootstrapToggle('enable');
            } else {
                $('#sessionsAttendance').bootstrapToggle('off');
                $('#sessionsObjectives').bootstrapToggle('off');
                $('#sessionsRetings').bootstrapToggle('off');
                $('#sessionsReports').bootstrapToggle('off');
                $('#sessionsAttendance').bootstrapToggle('disable');
                $('#sessionsObjectives').bootstrapToggle('disable');
                $('#sessionsRetings').bootstrapToggle('disable');
                $('#sessionsReports').bootstrapToggle('disable');
            }
        });
    })
</script>

