
@{
    ViewBag.Title = "SportsScienceTests";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Sports Science Tests</h2>
        <ol class="breadcrumb">
            <li>
                <a>Home</a>
            </li>
            <li>
                <a>Sports Science</a>
            </li>
            <li class="active">
                <strong>Tests</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a class="btn btn-primary" data-toggle="modal" data-target="#addTest">Add a Test</a>
        </div>


    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Sports Science Tests</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user"></ul>
                        <a>
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" ng-controller="ScienceTestsController">
                    @*Modal*@
                    <div class="modal inmodal" id="addTest" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content animated bounceInRight">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                    <h3 class="modal-title text-left">Add a Test</h3>
                                </div>
                                <div class="modal-body">
                                    <form class="form-horizontal">
                                        <div class="form-group">
                                            <label class="col-lg-4">Test Type:</label>
                                            <div class="col-lg-7 pull-right">
                                                <select ng-model="selectedType" ng-options="testType.name for testType in testTypes" class=" form-control m-b" name="account"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">Test Name:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="name" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">Test Description:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="description" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">Z-Score Formula:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="zScoreFormula" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">Measure:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="measure" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">Low Value:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="lowValue" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">High Value:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="hightValue" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">National Average:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="nationalAverage" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">Test Video:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="video" class="form-control">
                                            </div>
                                        </div>

                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button ng-click="cancel()" id="closeModal" type="button" class="btn btn-white">Close</button>
                                    <button ng-click="okTest()" id="saveModal" type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*Modal End*@
                    @*Modal*@
                    <div class="modal inmodal" id="confDelete" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content animated bounceInRight">
                                <div class="modal-header">

                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                    <h3 class="modal-title">Delete Record?</h3>


                                </div>
                                <div class="modal-body">
                                    <h3 class="text-center">Are you sure you wish to delete this record?</h3>
                                </div>
                                <div class="modal-footer">
                                    <button ng-click="cancel()" type="button" class="btn btn-white">No</button>
                                    <button ng-click="delete()" type="button" class="btn btn-primary">Yes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*Modal End*@
                    <div class="row">
                        <div class="col-sm-9 m-b-xs">
                            <form class="form-horizontal">
                                <div class="form-group" style="margin-left: 0px;">
                                    <div data-toggle="buttons" class="btn-group">
                                        <label ng-click="testsPerPage = 10" class="btn btn-sm btn-white"> <input type="radio" id="option1" name="options"> 10 </label>
                                        <label ng-click="testsPerPage = 20" class="btn btn-sm btn-white active"> <input type="radio" id="option2" name="options"> 20 </label>
                                        <label ng-click="testsPerPage = 30" class="btn btn-sm btn-white"> <input type="radio" id="option3" name="options"> 30 </label>
                                    </div>

                                    <div class="btn-group">
                                        <label onclick=" $('.table').tableExport({ type: 'csv', escape: 'false' }); " class="btn btn-sm btn-white">
                                            CSV
                                        </label>
                                        <label onclick=" $('.table').tableExport({ type: 'excel', escape: 'false' }); " class="btn btn-sm btn-white">
                                            Excel
                                        </label>
                                        <label onclick=" $('.table').tableExport({ type: 'pdf', escape: 'false' }); " class="btn btn-sm btn-white">
                                            PDF
                                        </label>
                                        <label onclick="print($('.table'))" class="btn btn-sm btn-white">
                                            Print
                                        </label>
                                    </div>
                                </div>
                            </form>            
                            
                        </div>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <input ng-model="q" type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Test Type</th>
                                <th>Test Name</th>
                                <th>Measure</th>
                                <th>Min Score</th>
                                <th>Max Score</th>
                                <th>National Average</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody id="contentTable">
                            <tr dir-paginate="test in sportTests | filter:q | itemsPerPage: testsPerPage" total-items="totalTests">
                                <td>{{test.type}}</td>
                                <td>{{test.name}}</td>
                                <td>{{test.measure}}</td>
                                <td>{{test.lowValue}}</td>
                                <td>{{test.hightValue}}</td>
                                <td>{{test.nationalAverage}}</td>
                                <td>
                                    <i ng-click="openDelete(test.id)" class="fa fa-trash" style="cursor: pointer;"></i>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <dir-pagination-controls on-page-change="pageChanged(newPageNumber)"></dir-pagination-controls>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>