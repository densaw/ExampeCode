
@{
    ViewBag.Title = "PhysiotherapyBodyParts";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Physiotherapy Body Parts</h2>
        <ol class="breadcrumb">
            <li>
                <a>Home</a>
            </li>
            <li>
                <a>Physio</a>
            </li>
            <li class="active">
                <strong>Body Parts</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a class="btn btn-primary" data-toggle="modal" data-target="#addBodyPart">Add a Body Part</a>
        </div>


    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Physiotherapy Body Parts</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user"></ul>
                        <a>
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" ng-controller="BodyPartController">
                    @*Modal*@
                    <div class="modal inmodal" id="addBodyPart" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content animated bounceInRight">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                    <h3 class="modal-title">Add a Body Part</h3>
                                </div>
                                <div class="modal-body">
                                    <form class="form-horizontal">
                                        <div class="form-group">
                                            <label class="col-lg-4">Body Part:</label>
                                            <div class="col-lg-7 pull-right">
                                                <select ng-model="selectedBPart" ng-options="part.name for part in parts" class=" form-control m-b" name="account"></select>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">Injury Name:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="newPart.injuryName" class="form-control">

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">Description:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="newPart.description" class="form-control">

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">Picture:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input type="file" accept="image/*" class="file">

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4">Treatment:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input ng-model="newPart.treatment" class="form-control">

                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button ng-click="cancel()" id="closeModal" type="button" class="btn btn-white">Close</button>
                                    <button ng-click="ok()" id="saveModal" type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*Modal End*@
                    @*Modal*@
                    <div class="modal inmodal" id="confDelete" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content animated bounceInRight">
                                <div class="modal-header">

                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                    <h3 class="modal-title">Delete Record?</h3>


                                </div>
                                <div class="modal-body">
                                    <h3 class="text-center">Are you sure you wish to delete this record?</h3>
                                </div>
                                <div class="modal-footer">
                                    <button ng-click="cancel()" type="button" class="btn btn-white">No</button>
                                    <button ng-click="delete()" type="button" class="btn btn-primary">Yes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*Modal End*@
                    <div class="row">
                        <div class="col-sm-9 m-b-xs">
                            <div data-toggle="buttons" class="btn-group">
                                <label ng-click="itemsPerPage = 10" class="btn btn-sm btn-white"> <input type="radio" id="option1" name="options"> 10 </label>
                                <label ng-click="itemsPerPage = 20" class="btn btn-sm btn-white active"> <input type="radio" id="option2" name="options"> 20 </label>
                                <label ng-click="itemsPerPage = 30" class="btn btn-sm btn-white"> <input type="radio" id="option3" name="options"> 30 </label>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <input ng-model="q" type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Body Area</th>
                                <th>Injury</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody id="contentTable">
                                <tr dir-paginate="part in items | filter:q | itemsPerPage: itemsPerPage" total-items="totalItems">
                                    <td>{{parts[part.type].name}}</td>
                                    <td>{{part.injuryName}}</td>
                                    <td>
                                        <i ng-click="openDelete(part.id)" class="fa fa-trash" style="cursor: pointer;"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <dir-pagination-controls on-page-change="pageChanged(newPageNumber)"></dir-pagination-controls>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

