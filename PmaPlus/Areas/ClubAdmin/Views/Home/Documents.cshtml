
@{
    ViewBag.Title = "PMA+";
    Layout = "~/Areas/ClubAdmin/Views/Shared/_AdminLayout.cshtml";
}
<div ng-controller="ClubDocumetsController" ng-cloak>

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2>Documents</h2>
            <ol class="breadcrumb">
                <li>
                    <a>Home</a>
                </li>
                <li class="active">
                    <strong>Documents</strong>
                </li>
            </ol>
        </div>
    </div>
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <div class="file-manager">


                            <button type="file" id="file" class="btn btn-primary btn-block" ng-click="add()">Upload Files</button>

                            <div class="hr-line-dashed"></div>
                            <h5>Folders</h5><a class="pull-right" href=""><i class="fa fa-plus-square-o"></i></a>

                            <ul class="folder-list" style="padding: 0">
                                <li ng-repeat="folder in folders"><a ng-click="getFiles(folder.name)"><i class="fa fa-folder"></i> {{folder.name}}</a><a class="pull-right" href=""><i class="fa fa-trash-o"></i></a> </li>

                            </ul>

                            @*
                                <h5 class="tag-title">Tags</h5>
                                <ul class="tag-list" style="padding: 0">
                                    <li><a href="">Work</a></li>
                                </ul>
                            *@
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 animated fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="file-box" ng-repeat="file in files">
                            <div class="file">
                                <a href="#">
                                    <span class="corner"></span>

                                    <div class="icon">
                                        <i class="fa fa-file"></i>
                                    </div>
                                    <div class="file-name">
                                        {{file.name}}
                                        <br>
                                        <small>Added: {{file.addDate}}</small>
                                    </div>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
<script src="~/Scripts/controllers/ClubDocumentsController.js"></script>
}