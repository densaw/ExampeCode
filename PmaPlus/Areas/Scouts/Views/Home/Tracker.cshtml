@{
    ViewBag.Title = "PMA+";
    Layout = "~/Areas/Scouts/Views/Shared/_AdminLayout.cshtml";
}


<script src="~/Scripts/controllers/curriculumProcess/CurrAdendanceController.js"></script>

<div ng-controller="AtendanceController" ng-cloak>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Player Attributes</h5>
                    <div class="ibox-tools">
                        <a @*class="collapse-link"*@>
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a @*class="dropdown-toggle" data-toggle="dropdown" href="#"*@>
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            @*<li>
                                    <a href="#">Config option 1</a>
                                </li>
                                <li>
                                    <a href="#">Config option 2</a>
                                </li>*@
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>

                </div>

                <div class="table-responsive">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-9 m-b-xs">
                               
                            </div>
                        </div>
                        <table class="table tablea table-striped">
                            <thead>
                                <tr>
                                    <th>Picture</th>
                                    <th>Player Name</th>
                                    <th>ATT%</th>
                                    <th>WB</th>
                                    <th>CUR</th>
                                    <th>Attendance</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr dir-paginate="item in items | filter:q | itemsPerPage: itemsPerPage" total-items="totalItems">
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <i ng-click="openEdit(newScoutP.id)" class="fa fa-cog" style="cursor: pointer;"></i>
                                        <i ng-click="openDelete(newScoutP.id)" class="fa fa-trash" style="cursor: pointer;"></i>
                                        <a ng-href="TalenIdProfile/{{newScoutP.id}}" class="fa fa-graduation-cap"></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <dir-pagination-controls on-page-change="pageChanged(newPageNumber)"></dir-pagination-controls>
                    </div>
                </div>
            </div>
            @*Modal*@
            <div class="modal inmodal" id="confInvite" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content animated bounceInRight">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h3 class="modal-title text-left">Invite</h3>
                        </div>
                        <div class="modal-body">
                            <form name="myform" class="form-horizontal" novalidate>

                                <div class="form-group">
                                    <label class="col-lg-4 title-modal">Invited to Trial:</label>
                                    <div class="col-lg-7 pull-right">
                                        <input id="toggleInvite" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-4 title-modal">Attended Trail:</label>
                                    <div class="col-lg-7 pull-right">
                                        <input id="toggleAttendance" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-4 title-modal">Joined Club:</label>
                                    <div class="col-lg-7 pull-right">
                                        <input id="toggleJoined" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default">
                                    </div>
                                </div>

                            </form>

                        </div>
                        <div class="modal-footer">
                            <button ng-click="cancelInvite()" id="closeInvite" type="button" class="btn btn-white">Close</button>
                            <button ng-click="okInvite()" id="saveInvite" type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            @*Modal End*@
            @*Modal*@
            <div class="modal inmodal" id="confaddNotes" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content animated bounceInRight">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h3 class="modal-title text-left">Add Notes</h3>
                        </div>
                        <div class="modal-body">
                            <form name="myform" class="form-horizontal" novalidate>

                                <div class="form-group" ng-class="{'has-error':myform.eventTitle.$invalid && (myform.eventTitle.$dirty||myform.form_Submitted)}">
                                    <label class="col-lg-4 title-modal">Scout:</label>
                                    <div class="col-lg-7 pull-right">
                                        <select name="scoutName" ng-model="newNote.scout" ng-options="scout.name as scout.name for scout in scouts" class=" form-control"></select>
                                    </div>
                                </div>
                                <div class="form-group" ng-class="{'has-error':myform.eventStart.$invalid && (myform.eventStart.$dirty||myform.form_Submitted)}">
                                    <label class="col-lg-4 title-modal">Date:</label>
                                    <div class="col-lg-7 pull-right">
                                        <div class="dropdown">
                                            <a class="dropdown-toggle" id="dropdown8" role="button" data-toggle="dropdown" data-target="#" href="#">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" value="{{newNote.addDate | date:'dd-MM-yyyy HH:mm' }}"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                                </div>
                                            </a>
                                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                                <datetimepicker required name="eventStart" data-ng-model="newNote.addDate" data-datetimepicker-config="{ dropdownSelector: '#dropdown8', startView:'day', minView:'day' }" />
                                            </ul>
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                    <label class="col-lg-4 title-modal">Location:</label>
                                    <div class="col-lg-7 pull-right">
                                        <input name="eventNote" ng-model="newNote.location" required class="form-control" maxlength="50">
                                    </div>
                                </div>
                                <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                    <label class="col-lg-4 title-modal">Note:</label>
                                    <div class="col-lg-7 pull-right">
                                        <textarea name="eventNote" ng-model="newNote.note" required class="form-control"></textarea>
                                    </div>
                                </div>

                            </form>

                        </div>
                        <div class="modal-footer">
                            <button ng-click="cancelNotes()" id="closeNote" type="button" class="btn btn-white">Close</button>
                            <button ng-click="okNotes(newNote.id)" id="saveNotes" type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            @*Modal End*@
        </div>
    </div>
    </div>
