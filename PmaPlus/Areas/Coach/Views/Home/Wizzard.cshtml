@{
    ViewBag.Title = "PMA+";
    Layout = "~/Areas/Coach/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading" >
    <div class="col-lg-10">
        <h2>Wizzard</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Home", "Wizzard")">Home</a>
            </li>

            <li class="active">
                <strong>Wizzard</strong>
            </li>
        </ol>
    </div>

</div>
<div class="wrapper wrapper-content animated fadeInRight" ng-controller="WizzardController" ng-cloak>
    <wizard on-finish="" hide-indicators="true">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Progress Bars</h5>
                        <div class="ibox-tools" style="margin-top: -5px;">
                            <a class=" btn btn-primary btn-sm" wz-previous>Prev</a>
                            <a class="btn btn-primary btn-sm" wz-next>Next</a>
                            <a class="btn btn-primary btn-sm">Finish</a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-12"><progressbar class="progress-striped active" max="10" value="wizard.step" type="danger"></progressbar></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <wz-step ng-repeat="step in steps">
           
            <div ng-if="step.coachDetails">
                @Html.Partial("~/Views/Partials/_WizardPartials/_JustSessionPartial.cshtml")
            </div>
            <div ng-if="step.attendance">
                @Html.Partial("~/Views/Partials/_WizardPartials/_Attendance.cshtml")
            </div>


        </wz-step>
    </wizard>
</div>

@section scripts{
    <script src="~/Scripts/controllers/WizzardsControllers.js"></script>
    <script src="~/Scripts/controllers/curriculumProcess/JustSessionController.js"></script> 
<script src="~/Scripts/controllers/curriculumProcess/CurrAdendanceController.js"></script>
}
