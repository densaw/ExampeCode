<div ng-controller="WizardPage2Controller" ng-cloak>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Match Objectives</h5>
                </div>
                <div class="table-responsive">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-9 m-b-xs">

                            </div>
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="text-align:left; padding-left: 26px;">Picture</th>
                                    <th style="text-align:left; width: 200px;">Player Name</th>
                                    <th style="text-align:left;">Objective</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat ="playersLists in playersList">
                                    <td style="width: 80px;">
                                        <div style="width: 80px; height: 80px; position: relative; overflow: hidden; border-radius: 50%;" class="img-circle pull-left">
                                            <img class="prifile" ng-src="{{playersLists.playerPicture}}" style-parent />
                                        </div>
                                    </td>
                                    <td style="text-align:left">{{playersLists.playerName}}</td>
                                    <td style="text-align: left;"><textarea style=" width: 100%; height: 100%;" ng-class="{'warnin-textArea':playersLists.objective == '' || !playersLists.objective && pressed }" ng-disabled="cuurrentMatch.archived" ng-model="playersLists.objective"></textarea></td>
                               
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
