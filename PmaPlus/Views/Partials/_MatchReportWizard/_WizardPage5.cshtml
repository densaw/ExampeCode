<div ng-controller="WizardPage5Controller" ng-cloak>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Match Report</h5>

                </div>
                <div class="table-responsive">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-9 m-b-xs">

                            </div>
                        </div>
                        <form name="myform" class="form-horizontal" novalidate>                        
                            <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                
                                <div class="col-lg-12 pull-right">
                                    <textarea ng-disabled="cuurrentMatch.archived" style="height:300px;" name="report" ng-model="cuurrentMatch.notes" required class="form-control"></textarea>
                                </div>
                            </div>
                        </form>
                        @*<div class="modal-footer">
                            <button ng-click="confirmModal()" id="save" type="button" class="btn btn-primary">Save changes</button>
                        </div>*@
                    </div>
                </div>
            </div>

        </div>
        @*Modal*@
        <div class="modal inmodal" id="confConfirm" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content animated bounceInRight">
                    <div class="modal-header">

                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h3 class="modal-title" style="text-align:left">Save Report</h3>


                    </div>
                    <div class="modal-body">
                        <h3 class="text-center" style="text-align:left">Are you sure you wish to save this record?</h3>
                    </div>
                    <div class="modal-footer">
                        <button ng-click="confirmAbort()" type="button" class="btn btn-white">No</button>
                        <button ng-click="addMatchNotes()" type="button" class="btn btn-primary">Yes</button>
                    </div>
                </div>
            </div>
        </div>
        @*Modal End*@
    </div>
</div>

