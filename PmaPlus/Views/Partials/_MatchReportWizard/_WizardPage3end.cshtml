<div ng-controller="WizardPage3endController" ng-cloak>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Match Objectives Outcome vs {{cuurrentMatch.oppositionName}} - {{cuurrentMatch.date | date:'dd-MM-yyyy HH:mm'}}</h5><h5 ng-if="addDate" style="font-weight: 200;"> - Date: {{addDate.time | date:'dd-MM-yyyy'}} Time: {{addDate.time | date:'HH:mm'}} Duration: {{addDate.duration}} </h5>

                </div>
                
                    <div class="modal-dialog">
                        <div class="modal-content animated bounceInRight">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                <h3 class="modal-title text-left">Set Objective</h3>
                            </div>
                            <div class="modal-body">
                                <form name="myform" class="form-horizontal" novalidate>

                                    <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                        <label class="col-lg-4 title-modal">Player Name:</label>
                                        <div class="col-lg-7 pull-right">
                                            <input name="sessionDuration" ng-disabled="true" ng-model="playerName" class="form-control">
                                        </div>
                                    </div>

                                    <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                        <label class="col-lg-4 title-modal">Match Objective:</label>
                                        <div class="col-lg-7 pull-right">
                                            <textarea name="playersLists" ng-disabled="true" ng-model="objective" required class="form-control"></textarea>
                                        </div>
                                    </div>

                                    <div class="form-group" ng-class="{'has-error':myform.eventNote.$invalid && (myform.eventNote.$dirty||myform.form_Submitted)}">
                                        <label class="col-lg-4 title-modal">Outcome:</label>
                                        <div class="col-lg-7 pull-right">
                                            <select name="playersOutcome" ng-model="outcome" ng-options="o.v as o.n for o in [{ n: 'Not Achieved', v: false }, { n: 'Achieved', v: true }]" required class="form-control"></select>
                                        </div>
                                    </div>
                                </form>

                            </div>
                            <div class="modal-footer">
                                <button ng-click="closeDetails()" id="close" type="button" class="btn btn-white">Close</button>
                                <button ng-click="addDetails(player, outcome)" id="save" type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                
            </div>

        </div>
    </div>

</div>

