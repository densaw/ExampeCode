<div ng-controller="WizardPage4Controller" ng-cloak>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    @*Modal*@
                    <div class="modal inmodal" id="confDetail1" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content animated bounceInRight">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                    <h3 class="modal-title text-left">{{modalTitle}}</h3>
                                </div>
                                <div class="modal-body">
                                    <form name="myform" class="form-horizontal" novalidate>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Player Name:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Man of the Match:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input id="manOfTheMatch" type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="default">
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Goals:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Shots:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Shots on Target:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Assists:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Takles:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Passes:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Saves:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Corners:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Free Kicks:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Form Rating(1-10):</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="form-group" ng-class="{'has-error':myform.crossing.$invalid && (myform.crossing.$dirty||myform.form_Submitted)}">
                                            <label class="col-lg-4 title-modal">Playing Time:</label>
                                            <div class="col-lg-7 pull-right">
                                                <input name="crossing" ng-model="newMatch.formation" class="form-control" required>
                                            </div>
                                        </div>


                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button ng-click="closeDetails()" id="closeModal" type="button" class="btn btn-white">Close</button>
                                    <button ng-click="okMatch()" id="saveModal" type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*Modal End*@
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Player Name</th>
                                    <th>Picture</th>
                                    <th>MOM</th>
                                    <th>GLS</th>
                                    <th>SHO</th>
                                    <th>SHT</th>
                                    <th>ASI</th>
                                    <th>TCK</th>
                                    <th>PAS</th>
                                    <th>SAV</th>
                                    <th>CRN</th>
                                    <th>FRK</th>
                                    <th>FRM</th>
                                    <th>PT</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Player Name</th>
                                    <th>Picture</th>
                                    <th>MOM</th>
                                    <th>GLS</th>
                                    <th>SHO</th>
                                    <th>SHT</th>
                                    <th>ASI</th>
                                    <th>TCK</th>
                                    <th>PAS</th>
                                    <th>SAV</th>
                                    <th>CRN</th>
                                    <th>FRK</th>
                                    <th>FRM</th>
                                    <th>PT</th>
                                    <th>
                                        <a ng-click="openEdit1()" class="fa fa-graduation-cap" style="cursor: pointer;"></a>
                                    </th>

                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
