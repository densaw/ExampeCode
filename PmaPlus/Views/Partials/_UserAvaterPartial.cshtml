<div ng-cloak ng-controller="UserAvatarController" class="text-center" style=" margin-bottom: 25px;   margin-top: 15px;">

    <div style="width:150px; height:150px; position:relative; overflow:hidden; border-radius: 50%; margin: auto; border: solid #ebebed;">

        <img ng-src="{{avatar.picture}}" alt="Alternate Text" class="prifile" style-parent />

    </div>


    <h3 style="margin-bottom: 2px;">{{avatar.name}}</h3>
    <span style="font-size: 12px;font-weight: 400;">{{avatar.role}}</span>
</div>
