
<div ng-controller="CurrReportObjectiveController" ng-cloak>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>{{step.name}}</h5>
                    <div class="ibox-tools" style="margin-top: -5px;">

                    </div>
                </div>
                <div class="table-responsive">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-9 m-b-xs">

                            </div>
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="text-align:left; padding-left: 26px;">Picture</th>
                                    <th>Player Name</th>
                                    <th>Objectives</th>
                                    <th>Outcome</th>
                                    <th>Feedback</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr dir-paginate="item in items | filter:q | itemsPerPage: itemsPerPage" total-items="totalItems">
                                    <td style="width: 80px;">
                                        <div style="width: 80px; height: 80px; position: relative; overflow: hidden; border-radius: 50%;" class="img-circle pull-left">
                                            <img class="prifile" ng-src="{{item.picture}}" style-parent />
                                        </div>
                                    </td>
                                    <td>{{item.name}}</td>
                                    <td>{{item.objective}}</td>
                                    <td><textarea ng-class="{'warnin-textArea':item.outcome == '' || !item.outcome && pressed }" type="text" ng-model="item.outcome" style="height:100%;"></textarea></td>
                                    <td>{{item.feedBack}}</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
<style>
    .warnin-textArea {
        border-color: rgba(225, 0, 0, 0.8);
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(255, 0, 0, 0.6);
        outline: 0 none;
    }
</style>