<div ng-controller="CurrStartPeriodController" ng-cloak>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>{{step.name}}</h5>
                    <div class="ibox-tools" style="margin-top: -5px;"></div>
                </div>
                <div class="table-responsive">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-9 m-b-xs"></div>
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Picture</th>
                                    <th>Player Name</th>
                                    <th>Pre-Period Objective</th>
                                    <th>ATT%</th>
                                    <th>WB%</th>
                                    <th>Cur</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr dir-paginate="item in items | filter:q | itemsPerPage: itemsPerPage" total-items="totalItems">
                                    <td>
                                        <div style="width: 80px; height: 80px; position: relative; overflow: hidden; border-radius: 50%;" class="img-circle pull-left">
                                            <img class="prifile" ng-src="{{item.picture}}" style-parent />
                                        </div>
                                    </td>
                                    <td>{{item.name}}</td>
                                    <td><textarea style="height: 100%;width: 100%;" ng-model="item.preObjective"></textarea></td>
                                    <td>{{item.attPercent}}</td>
                                    <td>{{item.wbPercent}}</td>
                                    <td>{{item.cur}}</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

